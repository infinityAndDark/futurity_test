<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/header_food_detail" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.example.futurityfood.view.ImageView16div9
                android:id="@+id/imageContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <include layout="@layout/view_food_detail_info" />

            <include layout="@layout/view_food_detail_extras" />

            <include layout="@layout/view_food_detail_quantity" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
